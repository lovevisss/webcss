	if(new Date().getDay()==0)var week="星期日"; 
	if(new Date().getDay()==1)var week="星期一"; 
	if(new Date().getDay()==2)var week="星期二"; 
	if(new Date().getDay()==3)var week="星期三"; 
	if(new Date().getDay()==4)var week="星期四"; 
	if(new Date().getDay()==5)var week="星期五"; 
	if(new Date().getDay()==6)var week="星期六";
	$("#date").html(new Date().getFullYear()+"年"+(new Date().getMonth()+1)+"月"+new Date().getDate()+"日 "+week);
});
</script>
